

<%= form_for(@category,url: categories_create_cate_path, html: { :id=>"cate_form" , method: :post ,:multipart => true}) do |f| %>

<div><%= f.label :Name%><br />
  	<%= f.text_field :name , :id=>"cate_name"%></div>
<div><%= f.label :Description%><br />
  	<%= f.text_area :description%></div>
 <div><%= f.label :is_featured%><br />
  	<%= f.check_box :is_featured%></div>
  	
  	<%if @subcategory%>
<div><%= f.label :Parent_id%><br />
 	<%=f.select :parent_id, options_for_select(@parent_category)%>
</div>
<%end%>
 <div><%= f.label :Image%><br />
  	<%= f.file_field :image%></div>
 <div><%= f.submit "Submit" %></div>
  	<% end %>

