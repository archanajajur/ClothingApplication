<h1> New Products </h1>
<%= form_for(@product,url: product_create_path,html: { :multipart => true}) do |f| %>

<div><%= f.label :Name%><br />
  	<%= f.text_field :name%></div>
<div><%= f.label :Description%><br />
  	<%= f.text_area :description%></div>
<div><%= f.label :Image%><br />
  	<%= f.file_field :image%></div>
<div><%= f.label :Is_featured%><br />
  	<%= f.check_box :is_featured%></div>
<div><%= f.label :Designer_id%><br />
 	<%=f.select :designer_id, options_for_select(@designer_ids)%></div>
 <div><%= f.label :Price%><br />
  	<%= f.text_field :price%></div>
<div><%= f.submit "Submit" %></div>
  	<% end %>

