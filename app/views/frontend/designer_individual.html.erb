</tr>
<tr><td><h1>Featured Products</h1></td></tr>
	<tr>
<% @products.each do |c| %>

 <td><%= link_to image_tag(c.image.url(:small)), frontend_product_individual_path(:ipid=>c.id) %></td>
    
   <% end %>                                
  </tr>
  <tr><td><h1>Other Products</h1></td></tr>
	<tr>
<% @products1.each do |c| %>

 <td><%= link_to image_tag(c.image.url(:small)), frontend_product_individual_path(:ipid=>c.id) %></td>
    
   <% end %>                                
  </tr>


</table>
</div>
</div>
