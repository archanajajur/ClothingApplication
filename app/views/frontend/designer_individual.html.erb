	<div id="main">
		<div id ="side_bar">
	<%=render :partial=>"layouts/designer"%>

	</div>

	<div id="content">
<% if @ckeck_user_liked.nil?%>
<%=link_to "Like" ,frontend_designer_liked_path(@designer.id)%>
<%end%>
<h1> Individual Designer details</h1>
<table>

<tr>
	<td>Name:</td>
	<td><%= @designer.name %></td>
</tr>
<tr>
	<td>Description:</td>
	<td><%= @designer.description %></td>
</tr>
<tr>
	<td>Image:</td>
	<td><%=image_tag(@designer.image.url(:small))%></td>
</tr>
<tr>
	<td>City:</td>
	<td><%= @designer.city %></td>
</tr>
<tr>
	<td>State:</td>
	<td><%= @designer.state %></td>
</tr>
<tr>
	<td>Country:</td>
